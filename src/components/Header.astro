---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';

import { Icon } from 'astro-icon'

---

<header class="sticky top-0 z-10 bg-blue-500 backdrop-filter backdrop-blur-lg bg-opacity-50">
	<nav>
		<div class="max-w-5xl mx-auto px-4">
			<div class="flex items-center justify-between h-16">
			<span class="text-2xl text-gray-900 font-semibold">Logo</span>
			<div class="flex space-x-4 text-gray-900">
				<HeaderLink href="/blog" class="" aria-current="page"> Home</HeaderLink>
				<HeaderLink href="/about" class="" aria-current="page">About</HeaderLink>
				<!-- <HeaderLink href="/" class="hover:opacity-90" aria-current="page">Blog</HeaderLink> -->
			</div>
			</div>
		</div>
	</nav>
</header>

<style>
	 header {
		margin: 0;
		padding: 0 1em;
		box-shadow: 0 2px 8px rgba(var(--black), 5%);
	}
	h2 {
		margin: 0;
		font-size: 1em;
	}

	h2 a,
	h2 a.active {
		text-decoration: none;
	}
	nav {
		/* display: flex;
		align-items: center;
		justify-content: space-between; */
	}
	nav a {
		padding: 1em 0.5em;
		/* color: var(--black); */
		border-bottom: 4px solid transparent;
		text-decoration: none;
	}
	nav a.active {
		text-decoration: none;
		/* border-bottom-color: var(--accent); */
	}

	[astro-icon] {
        display: flex;
    }

	.social-links,
	.social-links a {
		display: flex;
	} 
	/* @media (max-width: 720px) {
		.social-links {
			display: none;
		}
	} */
</style>
